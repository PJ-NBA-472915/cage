init() {
    echo "$(printf '=%.0s' $(seq 1 $(tput cols)))"
    echo "Using .rc environment for the Nebula Cage Repository"
    echo "$(printf '=%.0s' $(seq 1 $(tput cols)))"
    echo "Current directory: $(pwd)"
    echo "Current user: $(whoami)"
    echo "Current date: $(date)"
    echo "Current time: $(date +%H:%M:%S)"
    echo "$(printf '=%.0s' $(seq 1 $(tput cols)))"
}

init
