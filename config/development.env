# Development Environment Configuration
# This file contains development-specific settings

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
POD_TOKEN=dev-pod-token
REPO_PATH=/tmp/cage-dev-repo

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_PORT=5432
DATABASE_URL=postgresql://postgres:password@localhost:5432/cage_dev
REDIS_URL=redis://localhost:6379

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_URL=http://localhost:8000
RELOAD=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
OPENAI_API_KEY=your-dev-openai-key

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
MCP_PORT=8765
MCP_TOKENS=dev-mcp-token
MCP_SESSION_TTL=7200
MCP_RATE_MAX_CALLS=1000

# =============================================================================
# DEBUGGING CONFIGURATION
# =============================================================================
DEBUGPY_ENABLED=1
DEBUGPY_WAIT_FOR_CLIENT=0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEV_MODE=true
TEST_MODE=false
