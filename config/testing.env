# Testing Environment Configuration
# This file contains testing-specific settings

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
POD_TOKEN=test-token
REPO_PATH=/tmp/cage-test-repo

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_PORT=5432
DATABASE_URL=postgresql://postgres:password@localhost:5432/cage_test
REDIS_URL=redis://localhost:6379

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_URL=http://localhost:8000
RELOAD=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
OPENAI_API_KEY=test-openai-key

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
MCP_PORT=8765
MCP_TOKENS=test-mcp-token
MCP_SESSION_TTL=300
MCP_RATE_MAX_CALLS=100

# =============================================================================
# DEBUGGING CONFIGURATION
# =============================================================================
DEBUGPY_ENABLED=0
DEBUGPY_WAIT_FOR_CLIENT=0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=WARNING
LOG_FORMAT=text

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
DEV_MODE=false
TEST_MODE=true
